    <script>

        

        $(document).ready(function(){

         



            $(".num").click(function(){
                
                $("#display").val($("#display").val() + this.value)

            });

         
            $(".opt").click(function(){
                ($("#display").val!=="")
                $("#display").val($("#display").val() + this.value)           
             });
            



            $("#equation").click(function(){
                $("#display").val(eval($("#display").val()))
            });
            $("#delete").click(function(){
                $("#display").val(" ");
            });
        })

    </script>
